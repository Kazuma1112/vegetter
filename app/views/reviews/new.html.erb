 <%= form_for [@vegetable, @review] do |f| %>
          <div style="margin: 8px 0">
            <%= f.label :nickname, style: { 'margin-right' => 8 } %>
            <%= f.text_field :nickname, placeholder: 'nickname', value: '' %>
          </div>
         <div class="review">
            <%= f.label :総合評価 %>
            <%= f.number_field :general_rate, placeholder: '総合評価', value: 1, max: 5, min: 1, html: { class: "search__query"} %>
          </div>

           <div class="review">
            <%= f.label :対応の満足度 %>
            <%= f.number_field :communication_rate, placeholder: '総合評価', value: 1, max: 5, min: 1, html: { class: "search__query" }%>
          </div>

            <div class="review">
            <%= f.label :味の納得度 %>
            <%= f.number_field :taste_rate, placeholder: '総合評価', value: 1, max: 5, min: 1, html: { class: "search__query"} %>
          </div>

          <div class="review">
            <%= f.label :見た目の正確さ %>
            <%= f.number_field :visual_rate, placeholder: '総合評価', value: 1, max: 5, min: 1, html: { class: "search__query" }%>
          </div>


          <div class="review">
            <%= f.text_area :comment, placeholder: 'コメントを書いてください！', style: 'width: 100%; ,height: 300px;' %>
          </div>

          <div class="row">
            <div class="col10 push1">
              <%= button_tag type: "submit", class: "btn btn--block" do %>
              投稿する<i class="icon-arrow-right"></i>
              <% end %>
            </div>
          </div>
<%end%>
