<div class="contents_row", style="text-align: center;">

</style>
<h2 class="do_action">会員登録</h2>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<%= devise_error_messages! %>

<div class="field">
  <%= f.file_field :avatar %>
</div>


<div class="field">
  <% f.label :nickname %>お名前<br />
  <%= f.text_field :nickname, autofocus: true,  style: 'width: 340px;height: 20px;',placeholder: 'お名前を入力してください' %>
</div>

<div class="field">
  <% f.label :email %>メールアドレス<br />
  <%= f.email_field :email, autofocus: true,  style: 'width: 340px;height: 20px;',placeholder: '登録するメールアドレスを入力してください' %>
</div>

<div class="field">
  <% f.label :phone_number  %>電話番号<br />
  <%= f.text_field :phone_number , autofocus: true,  style: 'width: 340px;height: 20px;',placeholder: '電話番号を入力してください' %>
</div>


<div class="field">
  <% f.label :password %>パスワード
  <% if @validatable  %>
  <em>(<%= @minimum_password_length %> characters minimum)</em>
  <% end %><br />
  <%= f.password_field :password, autocomplete: "off" ,  style: 'width: 340px;height: 20px;',placeholder: '登録するパスワードを入力してください'%>
</div>

<div class="field">
  <%f.label :password_confirmation %>パスワードをもう一度入力してください<br />
  <%= f.password_field :password_confirmation, autocomplete: "off" ,  style: 'width: 340px;height: 20px;',placeholder: 'もう一度登録するパスワードを入力してください'%>
</div>

<div >
 <%=f.submit "会員登録する", class: 'log_in_entry'%>
</div>
<% end %>

<%= render "devise/shared/links" %>
</div>
