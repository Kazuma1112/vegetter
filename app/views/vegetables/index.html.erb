<div class="contents_row">


<!-- ランキング表示 -->
<% @ranking.each.with_index(1) do |vegetable, i| %>
          <li data-cinema-id="346394">
            <a href="/vegetables/<%= vegetable.id %>">
              <div class="box">
                <div class="box__cell w40 align-center">
                  <p class="label bgcolor-gray-lighter align-center">
                    <%= i %>
                  </p>
                </div>
               <div>
                  <%=vegetable.title %>
                  </p>
                  <% if vegetable_image.status == 0 %>
                  <img src="<%= vegetable.vegetable_image.imgae %>" alt="">
                </div>
              </div>
            </a>
          </li>
          <% end %>
          <% end -%>
<!-- 新着商品 -->
<div class="pickup">新着商品</div>
<% @vegetables.each do |vegetable| %>
                  <div class="col">
                    <a href="/vegetables/<%= vegetable.id %>"></a>
                      <h3 class="text-xsmall text-overflow" title="<vegetable.name>"><a href="/vegetables/<%= vegetable.id %>">
                      <%= vegetable.name%>
                      </h3>
                      <p class="text-small">
                        <%if vegetable.reviews.present?%>
                        <!-- <span class="rating-star">

                        <%%> -->
                       <span class="rate rate-<%= vegetable.reviews.general_rate %>"></span>
                        <% end %>
                      </p>




                  <% vegetable.vegetable_images.each do |image| %>
         <% if image.status == 0 %>
           <div class="my_vegetable_list">
            <%= image_tag image.image, class: 'user_vegetables' %>
           </div>
         <% end %>
       <% end %>
   <% end %>
 </div>

 <div class="new_vegetable">新着商品</div>
